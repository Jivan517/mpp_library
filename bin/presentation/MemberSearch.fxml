<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.MemberSearch">
   <children>
      <HBox>
         <children>
            <Label fx:id="lblMemberID" alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0" prefWidth="92.0" text="Member ID">
               <opaqueInsets>
                  <Insets top="5.0" />
               </opaqueInsets>
               <cursor>
                  <Cursor fx:constant="V_RESIZE" />
               </cursor>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <TextField fx:id="txtMemberID" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="127.0" promptText="Please enter the Member Id" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets left="5.0" top="5.0" />
               </padding>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </TextField>
            <Pane prefHeight="37.0" prefWidth="32.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox prefHeight="20.0" prefWidth="219.0" />
      <HBox alignment="CENTER" prefHeight="41.0" prefWidth="219.0">
         <children>
            <Button mnemonicParsing="false" onAction="#btnSearchClicked" text="Search" />
         </children>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </HBox>
      <VBox>
         <children>
            <VBox prefHeight="40.0" prefWidth="414.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Edit Library Member to System">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="80.0" top="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="50.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="98.0" text="Member ID" />
                  <TextField fx:id="txtmember_id" disable="true">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="17.0" prefWidth="98.0" text="First Name" />
                  <TextField fx:id="txtFirstName">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="17.0" prefWidth="98.0" text="Last Name" />
                  <TextField fx:id="txtLastName">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="17.0" prefWidth="98.0" text="Street" />
                  <TextField fx:id="txtStreet">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="17.0" prefWidth="98.0" text="City" />
                  <TextField fx:id="txtCity">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="17.0" prefWidth="98.0" text="State" />
                  <TextField fx:id="txtState">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="17.0" prefWidth="98.0" text="zip" />
                  <TextField fx:id="txtZip">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="17.0" prefWidth="98.0" text="Telephone No." />
                  <TextField fx:id="txtPhone">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleSubmitButtonAction" text="Submit">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleResetButtonAction" text="Reset" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
